.sign-in
  .sign-in-inner 
    %h2.title 新規登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :name , class: "font"
        %br/
        =  f.text_field  :name, autofocus: true, autocomplete: "name", class: "input"
      .field
        = f.label :email, class: "font"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "input"
      .field
        = f.label :password, class: "font"
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} 文字以上)
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "input"
      .field
        = f.label :password_confirmation, class: "font"
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "input"
      .actions
        = f.submit "登録", class:"submit"
        - if controller_name != 'sessions'
          = link_to "Log in", new_session_path(resource_name), class: "new-user"
          %br/

    = render "devise/shared/links"
