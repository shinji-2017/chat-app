.sign-in
  %h2.title Chat app
  .sign-in-inner
    .sign-in-inner-box
      %p.new-account
        chat appにログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field#sign-in-form
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "メールアドレスを入力"
          = icon("fas", "envelope")
        .field#sign-in-form
          = f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "パスワードを入力"
          = icon("fa", "lock")
        -# - if devise_mapping.rememberable?
        -#   .field.remember
        -#     = f.check_box :remember_me
        -#     = f.label :remember_me

        = f.submit "ログイン", class: "submit"
      .line

      - if devise_mapping.registerable? && controller_name != 'registrations'
        = link_to "アカウントを作成", new_registration_path(resource_name), class: "new-user"
        %br/
      = render "devise/shared/links"
