.sign-in
  .sign-in-inner
    %h2.title Chat app
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email, class: "font"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "input"
      .field
        = f.label :password, class: "font"
        %br/
        = f.password_field :password, autocomplete: "current-password", class: "input"
      -# - if devise_mapping.rememberable?
      -#   .field.remember
      -#     = f.check_box :remember_me
      -#     = f.label :remember_me
      .actions
        = f.submit "ログイン", class: "submit"
        - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to "新規登録", new_registration_path(resource_name), class: "new-user"
          %br/
    = render "devise/shared/links"
