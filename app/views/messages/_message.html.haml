.message{data:{id:message.id}}
  .message-image{data:{user_id:message.user.id}}
    - if message.user.image.url.present?
      = image_tag message.user.image.url, size: "50x50"
    - else
      = image_tag "default.jpg", size: "50x50"
  .message-box
    .message-box-box
      .message-box-box-name{data:{user_id:message.user.id}}
        = message.user.name
      .message-box-box-data
        = time_ago_in_words(message.created_at)+"前"
    .message-box-content
      - if message.text.present?
        .rinku
          = raw Rinku.auto_link(message.text, :all, 'target="_blank"') 
    = image_tag message.image.url, size: "200x200", class: "image" if message.image.present?